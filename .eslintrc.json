{
    "env": {
        "es6": true,
        "browser": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "parser": "babel-eslint",
    "plugins": [
        "babel",
        "react",
        "jsx-a11y",
        "import",
        "jsx-max-len"
    ],
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 0 }],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-use-before-define": ["error", {
                "functions": false,
                "classes": false
            }
        ],
        "comma-dangle": ["error", "never"],
        "padded-blocks": ["error", "always"],
        "no-underscore-dangle": "off",
        "react/forbid-prop-types": "off",
        "jsx-max-len/jsx-max-len": [2, { "lineMaxLength": 80, "tabWidth": 2, "maxAttributesPerLine": 1 }]
    }
}
